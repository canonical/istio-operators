---
apiVersion: networking.istio.io/v1beta1
kind: Gateway
metadata:
  name: {{ name }}
  namespace: {{ model_name }}
  labels:
    app.{{ app_name }}.io/is-workload-entity: "true"
spec:
  selector:
    istio: ingressgateway
  servers:
  - hosts:
    - '*'
{% if not secret_name %}
    port:
      name: http
      number: 80
      protocol: HTTP
{% else %}
    port:
      name: https
      number: 443
      protocol: HTTPS
    tls:
      mode: SIMPLE
      credentialName: {{ secret_name }}
{% endif %}
